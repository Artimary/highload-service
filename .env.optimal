# Optimal Scaling Configuration - 3 instances with 2 CPU each
API_CPU_LIMIT=2
API_MEMORY_LIMIT=2G
API_CPU_RESERVATION=1
API_MEMORY_RESERVATION=1G

# Database scaling - increased for optimal performance
DB_CPU_LIMIT=3
DB_MEMORY_LIMIT=3G
DB_CPU_RESERVATION=2
DB_MEMORY_RESERVATION=2G

# PostgreSQL settings - optimized for high concurrency
PG_MAX_CONNECTIONS=300
PG_SHARED_BUFFERS=512MB

# Nginx config - least connections for optimal load balancing
NGINX_CONFIG=least-conn-lb.conf

# Redis config
REDIS_PASSWORD=complex-password
REDIS_CPU_LIMIT=1
REDIS_MEMORY_LIMIT=1G