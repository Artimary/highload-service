# Load Testing Configuration for CI/CD Pipeline

# Performance thresholds for different stages
CI_SIMPLE_TEST_THRESHOLD=95
CD_STAGING_TEST_THRESHOLD=80
SCHEDULED_TEST_THRESHOLD=70

# Test scenarios for different contexts
CI_TEST_SCENARIO=simple_test
CD_TEST_SCENARIO=few_users_high_frequency
SCHEDULED_TEST_SCENARIOS=simple_test,few_users_high_frequency,many_users_low_frequency,peak_load,database_stress

# Timeout settings (in seconds)
SERVICE_STARTUP_TIMEOUT=300
TEST_EXECUTION_TIMEOUT=600
LONG_TEST_TIMEOUT=900

# Resource limits
MAX_CONCURRENT_TESTS=1
TEST_COOLDOWN_PERIOD=30

# Artifact retention
ARTIFACT_RETENTION_DAYS=30
DETAILED_LOGS_RETENTION_DAYS=7

# Notification settings
PERFORMANCE_ALERT_ENABLED=true
REGRESSION_ALERT_THRESHOLD=10
